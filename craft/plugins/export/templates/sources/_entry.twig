{% set sections = craft.export.getGroups('Entry') %}
<tbody class="type entry">
    <tr class="exportSection">
        <td>
            <div class="field">
                <div class="heading">
                    <label>{{ "Section"|t }}</label>
                    <div class="instructions">
                        <p>{{ "Choose the section you want to export from."|t }}</p>
                    </div>
                </div>
            </div>
        </td>
        <td>
            <div class="field">
                <div class="input">
                    <div class="select">
                        <select name="export[elementvars][section]" id="sections" disabled>
                        {% for section in sections %}
                            <option value="{{ section.id }}">{{ section.name }}</option>
                        {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        </td>
    </tr>
    <tr class="exportEntryType">
        <td>
            <div class="field">
                <div class="heading">
                    <label>{{ "Entrytype"|t }}</label>
                    <div class="instructions">
                        <p>{{ "Choose the entrytype you want to export from."|t }}</p>
                    </div>
                </div>
            </div>
        </td>
        <td>
            <div class="field">
                <div class="input">
                    <div class="select">
                        <select name="export[elementvars][entrytype]" id="entrytypes" disabled>
                            <option value="">{{ "All"|t }}</option>
                        {% for entrytype in sections[0].getEntryTypes() %}
                            <option value="{{ entrytype.id }}">{{ entrytype.name }}</option>
                        {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        </td>
    </tr>
</tbody>
